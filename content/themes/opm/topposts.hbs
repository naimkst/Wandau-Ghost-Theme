<!doctype html>
<html lang='{{ @site.lang }}'>

<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <meta name="description" content="The top posts from OPM Wire.">  
  <title>OPM Wire Top Posts</title>
  <meta name='viewport' content='width=device-width, initial-scale=1.0'>

  {{> fonts }}
  {{> compiled/inline-css }}

  <script>
    var site_url                            = '{{ @site.url }}',
        pagination_next_page_number         = '{{ pagination.next }}',
        pagination_available_pages_number   = '{{ pagination.pages }}',
        pagination_loading_text             = '{{t "Loading" }}',
        pagination_more_posts_text          = '{{t "More Posts" }}',
        clipboard_copied_text               = '{{t "Link copied to clipboard" }}';
  </script>

  {{ ghost_head }}
</head>

<body class='{{ body_class }}'>
  <div class='c-site-container'>
    {{> notifications }}

    {{> header }}

    {{> tags-list }}

    <main class='o-wrapper'>
      <div class='o-grid'>
        <div class='o-grid__col o-grid__col o-grid__col--center o-grid__col--3-3-l'>

          <div class='c-archive'>
    <h1 class='c-archive__title'>Top posts</h1>
    </div>

          {{> loop }}

            {{ pagination }}
        </div>
      </div>
    </main>

    {{> footer}}
  </div>

  <script src='{{ asset 'js/app.min.js' }}'></script>
  {{ ghost_foot }}
</body>
</html>